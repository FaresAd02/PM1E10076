<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp">

    <TextView
        android:id="@+id/nombre_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Nombre del contacto" />

    <TextView
        android:id="@+id/telefono_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombre_text_view"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        tools:text="Número de teléfono" />

    <TextView
        android:id="@+id/latitud_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/telefono_text_view"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        tools:text="Latitud" />

    <TextView
        android:id="@+id/longitud_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/latitud_text_view"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        tools:text="Longitud" />

    <ImageView
        android:id="@+id/firma_image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/longitud_text_view"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        android:contentDescription="@string/firma" />

    <Button
        android:id="@+id/button_actualizar_contacto"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="160dp"
        android:text="Actualizar" />

    <Button
        android:id="@+id/button_eliminar_contacto"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="160dp"
        android:text="Eliminar" />

    <Button
        android:id="@+id/button_compartir_contacto"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="200dp"
        android:text="Compartir" />

    <Button
        android:id="@+id/button_llamar_contacto"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="40dp"
        android:layout_marginBottom="200dp"
        android:text="Llamar" />

    <Button
        android:id="@+id/button_abrir_mapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="95dp"
        android:text="Abrir en Mapa" />

</RelativeLayout>
